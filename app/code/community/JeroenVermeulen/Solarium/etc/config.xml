<!--suppress XmlUnboundNsPrefix -->
<config>
    <modules>
        <JeroenVermeulen_Solarium>
            <version>1.3.2</version>
        </JeroenVermeulen_Solarium>
    </modules>
    <global>
        <blocks>
            <jeroenvermeulen_solarium>
                <class>JeroenVermeulen_Solarium_Block</class>
            </jeroenvermeulen_solarium>
        </blocks>
        <models>
            <jeroenvermeulen_solarium>
                <class>JeroenVermeulen_Solarium_Model</class>
                <resourceModel>jeroenvermeulen_solarium_resource</resourceModel>
            </jeroenvermeulen_solarium>
            <jeroenvermeulen_solarium_resource>
                <class>JeroenVermeulen_Solarium_Model_Resource</class>
            </jeroenvermeulen_solarium_resource>
            <catalogsearch_resource>
                <rewrite>
                    <fulltext>JeroenVermeulen_Solarium_Model_Resource_CatalogSearch_Fulltext</fulltext>
                </rewrite>
            </catalogsearch_resource>
            <catalogsearch>
                <rewrite>
                    <indexer_fulltext>JeroenVermeulen_Solarium_Model_CatalogSearch_Indexer_Fulltext</indexer_fulltext>
                </rewrite>
            </catalogsearch>
        </models>
        <helpers>
            <jeroenvermeulen_solarium>
                <class>JeroenVermeulen_Solarium_Helper</class>
            </jeroenvermeulen_solarium>
        </helpers>
        <resources>
            <jeroenvermeulen_solarium_setup>
                <setup>
                    <module>JeroenVermeulen_Solarium</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </jeroenvermeulen_solarium_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <jeroenvermeulen_solarium_controller_front_init_before>
                        <class>jeroenvermeulen_solarium/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </jeroenvermeulen_solarium_controller_front_init_before>
                </observers>
            </controller_front_init_before>
            <shell_reindex_init_process>
                <!-- This event only works for Magento >= 1.8 -->
                <observers>
                    <jeroenvermeulen_solarium_shell_reindex_init_process>
                        <class>jeroenvermeulen_solarium/observer</class>
                        <method>shellReindexInitProcess</method>
                    </jeroenvermeulen_solarium_shell_reindex_init_process>
                </observers>
            </shell_reindex_init_process>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <jeroenvermeulen_solarium>
                    <file>jeroenvermeulen/solarium/layout.xml</file>
                </jeroenvermeulen_solarium>
            </updates>
        </layout>
        <routers>
            <jeroenvermeulen_solarium>
                <use>standard</use>
                <args>
                    <module>JeroenVermeulen_Solarium</module>
                    <frontName>jeroenvermeulen_solarium</frontName>
                </args>
            </jeroenvermeulen_solarium>
        </routers>
    </frontend>
    <default>
        <jeroenvermeulen_solarium>
            <general>
                <enabled>0</enabled>
            </general>
            <server>
                <host>localhost</host>
                <port>8983</port>
                <path>/solr</path>
                <core>collection1</core>
                <timeout>3600</timeout>
                <search_timeout>5</search_timeout>
                <requires_authentication>0</requires_authentication>
                <username></username>
                <password></password>
            </server>
            <results>
                <max>100</max>
                <autocorrect>1</autocorrect>
            </results>
            <reindexing>
                <buffersize>100</buffersize>
            </reindexing>
        </jeroenvermeulen_solarium>
    </default>
</config>